<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <PackageId>dotnet-appsettings</PackageId>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>appsettings</ToolCommandName>
    <PackageTags>NetLah;dotnet;netcore;aspnetcore;appsettings;azure;appservice;configuration;json</PackageTags>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Description>Dotnet tool AppSettings convert appsettings.json to Azure AppService Application Settings</Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.CommandLineUtils" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" />
    <PackageReference Include="System.Text.Json" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE" Pack="true" PackagePath="\" />
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
